{% extends 'base.html.twig' %}

{% block meta_title %}
    {{ parent() }}
{% endblock %}

{% block metatags %}
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/backend.css') }}">
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/backend_head.js') }}"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/1.0.0-beta.2/classic/ckeditor.js"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}


{% set body_class='hold-transition skin-blue sidebar-mini' %}
{% set body_id='body-admin' %}

{% block body %}
    <div class="wrapper">
        {% include 'backend/layout/header.html.twig' %}
        {% include 'backend/layout/menu.html.twig' %}
        <div class="content-wrapper">
            <section class="content row">
            {% block content %} {% include 'backend/layout/'~ page|default('content') ~'.html.twig' %} {% endblock %}
            </section>
        </div>

        {% include 'backend/layout/footer.html.twig' %}
        {% block javascript_vendor %}
            {{ parent() }}
            <script src="{{ asset('js/backend_vendor.js') }}"></script>
            <script src="{{ asset('js/backend.js') }}"></script>
            <script src="{{ asset('js/backend1.js') }}"></script>
        {% endblock %}
    </div>
{% endblock %}