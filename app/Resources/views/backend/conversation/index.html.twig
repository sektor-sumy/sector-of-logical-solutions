{% extends ':backend:admin.html.twig' %}
{% set meta_title = 'Conversation' %}

{% block content %}
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Conversation</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm">

                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Author</th>
                            <th>Text</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for conversation in conversations %}
                        <tr>
                            <td>{{ conversation.id }}</td>
                            <td>{{ conversation.email }}</td>
                            <td>{{ conversation.author }}</td>
                            <td>{{ conversation.text }}</td>
                            <td>
                                <a href="{{ path('admin.conversation.show', { 'conversation': conversation.id }) }}"><span class="label label-success">Show</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <a class="btn btn-success btn-sm" href="{{ path('admin.page.new') }}">Create a new</a>
    </div>



{% endblock %}
{% block javascript_vendor %}
{{ parent() }}

    <script>
        $( document ).ready(function (e) {


        })
    </script>
{% endblock %}