{% extends ':backend:admin.html.twig' %}
{% set meta_title = 'Pages' %}

{% block content %}
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Quick Example</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm">

                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Slug</th>
                            <th>Title</th>
                            <th>Meta</th>
                            <th>Createdat</th>
                            <th>Content</th>
                            <th>Actions</th>
                            <th>Homepage</th>
                            <th>Menu</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for page in pagination %}
                        <tr>
                            <td>{{ page.id }}</td>
                            <td>{{ page.slug }}</td>
                            <td>{{ page.title }}</td>
                            <td>
                                <b>Title:</b> {{ page.metaTitle }}<br>
                                <b>Description:</b> {{ page.metaDescription }}<br>
                                <b>Keywords:</b> {{ page.metaKeywords }}
                            </td>
                            <td>
                                {% if page.createdAt %}{{ page.createdAt|date('d-m-Y') }}{% endif %}
                            </td>
                            <td>{{ page.content }}</td>
                            <td>
                                <a href="{{ path('admin.page.show', { 'page': page.id }) }}"><span class="label label-success">Show</span></a>
                                <a href="{{ path('admin.page.edit', { 'page': page.id }) }}"><span class="label label-warning">Edit</span></a>
                            </td>
                            <td>
                                <input class="homepage" data-id="{{ page.id }}" type="radio" name="is_homepage" value="1" {% if page.homepage %}checked{% endif %}>
                            </td>
                            <td>
                                <input class="inmenu" data-id="{{ page.id }}" type="checkbox" {% if page.inMenu %}checked{% endif %}>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
        <!-- /.box -->
        <a class="btn btn-success btn-sm" href="{{ path('admin.page.new') }}">Create a new</a>
    </div>



{% endblock %}
{% block javascript_vendor %}
{{ parent() }}

    <script>
        $( document ).ready(function (e) {

            var homepage = $('.homepage');

            homepage.unbind('click').click(function (e) {
                var pageId = $(this).data('id');
                $.ajax({
                    type: "GET",
                    data: { 'id': pageId },
                    url: "{{ path('admin.page.homepage') }}",
                    success: function(data){
                    }
                });

            })

            var inmenu = $('.inmenu');
            inmenu.unbind('click').click(function (e) {
            console.log('click');
            var pageId = $(this).data('id');
                $.ajax({
                    type: "GET",
                    data: { 'id': pageId },
                    url: "{{ path('admin.page.inmenu') }}",
                    success: function(data){
                    }
                });

            })
        })
    </script>
{% endblock %}
