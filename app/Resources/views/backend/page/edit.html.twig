{% extends ':backend:admin.html.twig' %}

{% block content %}
    <div class="col-sm-4">
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">Page edit</h3>
            </div>
            {{ form_start(edit_form) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(edit_form.slug) }}
                    {{ form_widget(edit_form.slug, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.metaTitle) }}
                    {{ form_widget(edit_form.metaTitle, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.metaDescription) }}
                    {{ form_widget(edit_form.metaDescription, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.metaKeywords) }}
                    {{ form_widget(edit_form.metaKeywords, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item active">
                            <a class="nav-link active" href="#profile" role="tab" data-toggle="tab" aria-expanded="true">English</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#buzz" role="tab" data-toggle="tab">Русский</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="profile">
                            <div class="form-group">
                                {{ form_label(edit_form.titleEn) }}
                                {{ form_widget(edit_form.titleEn, {'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.contentEn) }}
                                {{ form_widget(edit_form.contentEn, {'attr':{
                                    'class':'form-control',
                                    'rows':'10'
                                }}) }}
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="buzz">
                            <div class="form-group">
                                {{ form_label(edit_form.titleRu) }}
                                {{ form_widget(edit_form.titleRu, {'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.contentRu) }}
                                {{ form_widget(edit_form.contentRu, {'attr':{
                                    'class':'form-control',
                                    'rows':'10'
                                }}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="btn-group">
                    {{ form_widget(edit_form) }}
                        <input class="btn btn-warning btn-sm" type="submit" value="Edit" />
                    {{ form_end(edit_form) }}
                    </div>
                    <div class="btn-group">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger btn-sm" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}


        </div>
        <a href="{{ path('admin.page.index') }}">
            <button class="btn btn-primary btn-sm">Back to the list</button>
        </a>
    </div>
{% endblock %}

{% block javascript_vendor %}
    {{ parent() }}
{% endblock %}