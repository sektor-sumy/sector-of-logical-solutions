{% extends ':backend:admin.html.twig' %}

{% block content %}
    <div class="col-sm-4">
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">Page edit</h3>
            </div>
            {{ form_start(edit_form) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_label(edit_form.title) }}
                    {{ form_widget(edit_form.title, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.slug) }}
                    {{ form_widget(edit_form.slug, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.metaTitle) }}
                    {{ form_widget(edit_form.metaTitle, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.metaDescription) }}
                    {{ form_widget(edit_form.metaDescription, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.metaKeywords) }}
                    {{ form_widget(edit_form.metaKeywords, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(edit_form.content) }}
                    {{ form_widget(edit_form.content, {'attr':{
                        'class':'form-control',
                        'rows':'10'
                    }}) }}
                </div>
                <div>
                    <div class="btn-group">
                    {{ form_widget(edit_form) }}
                        <input class="btn btn-warning btn-sm" type="submit" value="Edit" />
                    {{ form_end(edit_form) }}
                    </div>
                    <div class="btn-group">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger btn-sm" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}


        </div>
        <a href="{{ path('admin.page.index') }}">
            <button class="btn btn-primary btn-sm">Back to the list</button>
        </a>
    </div>
{% endblock %}

{% block javascript_vendor %}
    {{ parent() }}
{% endblock %}